# ============================================
# GAIANET LLM CONFIGURATION (Existing)
# ============================================
GAIANET_API_KEY=your-gaianet-api-key
GAIANET_NODE_URL=https://your-node-id.gaia.domains
GAIANET_TEXT_MODEL_SMALL=llama
GAIANET_TEXT_MODEL_LARGE=llama
GAIANET_EMBEDDINGS_MODEL=nomic-embed-text-v1.5

# ============================================
# DASH0 MONITORING CONFIGURATION (New)
# ============================================

# Your Dash0 authentication token
# Get it from: https://app.dash0.com → Settings → API Tokens
DASH0_AUTH_TOKEN=your-dash0-token-here

# Dash0 OTLP endpoint (default: Dash0 ingress)
OTEL_EXPORTER_OTLP_ENDPOINT=https://ingress.dash0.com

# Service identification
OTEL_SERVICE_NAME=sofia-agent
OTEL_SERVICE_VERSION=0.1.0

# Environment (development, staging, production)
NODE_ENV=development

# ============================================
# OPTIONAL: DEBUG AND ADVANCED SETTINGS
# ============================================

# Enable debug logs for OpenTelemetry
DASH0_DEBUG=false

# Log level for OTEL SDK
OTEL_LOG_LEVEL=info

# Enable automatic service name from package.json
DASH0_AUTOMATIC_SERVICE_NAME=true

# Enable file system instrumentation (can be verbose)
DASH0_ENABLE_FS_INSTRUMENTATION=false

# ============================================
# WORKLOAD TESTING SETTINGS
# ============================================

# Enable detailed metrics for workload calculation
ENABLE_DETAILED_METRICS=true

# Export metrics interval (in milliseconds)
METRICS_EXPORT_INTERVAL=60000
